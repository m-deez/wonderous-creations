            <option class="ele-die" value="8">8</option>
            <option class="ele-die" value="10">10</option>
            <option class="ele-die" value="12">12</option>
        </select>

    <br>
        <label>Select the rarity of your weapon</label>
        <select type="text" name="rarity">
            <option class="None" value="none" selected disabled hidden> -- -- -- </option>
            <option class="Rarity" value="Uncommon">Uncommon</option>
            <option class="Rarity" value="Rare">Rare</option>
            <option class="Rarity" value="Very Rare">Very Rare</option>
            <option class="Rarity" value="Legendary">Legendary</option>
        </select>

    <br>
        <label>Select the augment of the weapon!</label>
        <select type="text" name="augment">
            <option class="None" value="none" selected disabled hidden> -- -- -- </option>
            <option class="augment" value="none">None</option>
            <option class="augment" value="+1">+1</option>
            <option class="augment" value="+2">+2</option>
            <option class="augment" value="+3">+3</option>
        </select>

    <br>
        <label>Image</label>
        <input type="file" name="image">Upload an image of your weapon</p>

    <br>
        <label>Name: Name your dope ass weapon!</label>
        <input type="text" name="name">

    <br>    
        <label>Physical Description: What does your weapon look like?</label>
        <input type="text" name="physDescription">

    <br>
        <label>Property Description: What does your weapon do?</label>
        <input type="text" name="propertyDescription">
    <br>
    <br>
        <button type="submit">Create Your Weapon!</button>

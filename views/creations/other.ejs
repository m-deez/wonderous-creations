            <option class="item" value="Circlet">Circlet</option>
            <option class="item" value="Cloak">Cloak</option>
            <option class="item" value="Crystal Ball">Crystal Ball</option>
            <option class="item" value="Feather Token">Feather Token</option>
            <option class="item" value="Figurine">Figurine</option>
            <option class="item" value="Gloves">Gloves</option>
            <option class="item" value="Goggles">Goggles</option>
            <option class="item" value="Hat">Hat</option>
            <option class="item" value="Headband">Headband</option>
